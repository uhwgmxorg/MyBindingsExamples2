<Window x:Class="MyBindingsExamples2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="226" Width="438">
    <Grid>
        <ListBox ItemsSource="{Binding OList}" SelectedIndex="{Binding Index}" DisplayMemberPath="DValue" SelectedValuePath="DValue" HorizontalAlignment="Left" Height="148" VerticalAlignment="Top" Width="132" Margin="25,23,0,0"/>
        <Label Content="SelectedIndex" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,32.96,132.38,0"/>
        <TextBox Text="{Binding Index}" HorizontalAlignment="Right" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" Margin="0,35,94,0"/>

        <Button x:Name="button_1" Content="#1" ToolTipService.ShowDuration="90000" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,10,10,0" Click="Button_1_Click"/>
        <Button x:Name="button_2" Content="#2" ToolTipService.ShowDuration="90000" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,34.96,10,0" Click="Button_2_Click"/>
        <Button x:Name="button_3" Content="#3" ToolTipService.ShowDuration="90000" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,59.92,10,0" Click="Button_3_Click"/>

    </Grid>
</Window>
